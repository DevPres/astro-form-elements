---
import type { ElementEmitterEvents } from '../types';

export declare interface Props {
  formElementName:string
  events: ElementEmitterEvents[] | undefined
  role?: string;
}
const { formElementName, events , ...attrs} = Astro.props
---
<form-element 
  formElementName={formElementName}
  emitOnFocus={!!events ? events.includes('focus') : true} 
  emitOnBlur={!!events ? events.includes('blur') : true}
  emitOnInput={!!events ? events.includes('input') : true}
  emitOnChange={!!events ? events.includes('change') : false}
  {...attrs}
  >
  <slot/>
</form-element>

<script src="./base-form-element.ts"></script>