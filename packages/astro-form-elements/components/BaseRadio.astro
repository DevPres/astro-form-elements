//https://docs.astro.build/en/guides/typescript/#built-in-html-attributes
import type { ElementEmitterEvents, ElementProps } from '../types.d'
import FormElement from './FormElement.astro';

export declare type BaseCheckboxInterface = Omit<ElementProps, 'events' | 'type' > 

export declare interface Props extends BaseCheckboxInterface {
  events?: Exclude<ElementProps["events"], 'input'>,  
  type?: Extract<ElementProps["type"], 'radio'>
}


const {
  events,
  type = 'radio',
  ...attrs 
} = Astro.props;



let emitOn: ElementEmitterEvents[]  = !!events?.length ? events : ['focus', 'blur', 'change']



---
  <FormElement formElementName={attrs.formElementName} events={emitOn}>
    { !!attrs.label ? <label for={attrs.formElementName}>{attrs.label}</label> : ''}
    <input data-elementInput id="test"  name={attrs.formElementName} type={type}   />
  </FormElement>

